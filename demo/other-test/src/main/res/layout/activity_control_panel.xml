<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/control_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlPanelActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_section"
        android:layout_width="0dp"
        android:layout_height="114dp"
        app:layout_constraintWidth_percent="0.433333333333"
        app:layout_constraintVertical_bias="0.47"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已锁定，点击解锁"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttons_section"
        android:layout_width="120dp"
        android:layout_height="114dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/main_section"
        app:layout_constraintTop_toTopOf="@id/main_section">

        <View
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginStart="1dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toTopOf="@+id/button1" />

        <View
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintEnd_toStartOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:layout_marginTop="1dp" />

        <View
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginStart="1dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>