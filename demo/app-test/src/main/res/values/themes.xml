<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MineAndroid" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- 应用主主题 -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.MineAndroid" parent="Base.Theme.MineAndroid" />

    <!-- 启动页主题 - 解决白屏问题 -->
    <style name="Theme.MineAndroid.Splash" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- 启动页背景色 -->
        <item name="android:windowBackground">@color/black</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏导航栏 -->
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="Theme.MineAndroid.Main" parent="Base.Theme.MineAndroid">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>