<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/attrs.xml -->
<resources>
    <declare-styleable name="CircleProgressView">
        <attr name="progressColor" format="color" />
        <attr name="bgColor" format="color" />
        <attr name="progressWidth" format="dimension" />
        <attr name="startAngle" format="float" />
        <attr name="iconPadding" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="RoundProgressBar">
        <attr name="barColor" format="color" />          <!-- 进度条颜色 -->
        <attr name="ringWidth" format="dimension" />     <!-- 圆环宽度 -->
        <attr name="ringBackground" format="color" />    <!-- 背景圆环颜色 -->
        <attr name="startBarAngle" format="float" />        <!-- 起始角度（默认从顶部开始） -->
    </declare-styleable>
    <declare-styleable name="AdaptiveWallpaperView">
        <!-- 颜色过渡动画时长 (ms) -->
        <attr name="animationDuration" format="integer" />
    </declare-styleable>
    <declare-styleable name="AppLayout">
        <attr name="maxColumns" >
            <enum name="Column3" value="3"/>
            <enum name="Column4" value="3"/>
            <enum name="Column6" value="6"/>
        </attr>
        <attr name="maxRows">
            <enum name="Row1" value="1"/>
            <enum name="Row2" value="2"/>
        </attr>
        <attr name="itemMargin" format="dimension" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemIconSize" format="dimension" />
        <attr name="itemTextSize" format="dimension" />
        <attr name="itemCornerRadius" format="dimension" />
    </declare-styleable>
</resources>